<p style="color: green"><%= notice %></p>

<%= render @author %>

<div>
  <h2>Livros deste autor:</h2>
  <ul>
    <% @author.books.each do |book| %>
      <li><%= book.title %></li>
    <% end %>
  </ul>

  <%= link_to I18n.t('author.edit'), edit_author_path(@author) %> |
  <%= link_to I18n.t('author.back'), authors_path %>

  <%= button_to I18n.t('author.destroy'), @author, method: :delete %>
</div>
