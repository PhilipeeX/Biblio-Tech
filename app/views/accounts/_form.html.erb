<%= form_with(model: @account, url: supplier_account_path(@supplier)) do |form| %>
  <% if account.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(account.errors.count, "error") %> <%= I18n.t('account.view_form.error') %>:</h2>

      <ul>
        <% account.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :bank, style: "display: block" %>
    <%= form.text_field :bank %>
  </div>

  <div>
    <%= form.label :number, style: "display: block" %>
    <%= form.number_field :number %>
  </div>

  <div>
    <%= form.label :digit, style: "display: block" %>
    <%= form.number_field :digit %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
