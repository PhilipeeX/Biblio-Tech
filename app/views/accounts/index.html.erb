<p style="color: green"><%= notice %></p>

<h1><%=@supplier.name %> <%= I18n.t('supplier.account.view_index_title') %></h1>
<%= form_with url: supplier_accounts_path, method: :get, local: true do %>
  <%= label_tag :number, I18n.t('supplier.account.view_index.account_number') %>
  <%= text_field_tag :number, params[:number] %>
  <%= submit_tag I18n.t('helpers.filter.button') %>
<% end %>
<% if @accounts.any? %>
  <div id="accounts">
    <% @accounts.each do |account| %>
      <%= render account %>
      <p>
        <%= link_to I18n.t('supplier.account.show'), supplier_account_path(@supplier, account) %>
      </p>
      <hr>
    <% end %>
  </div>
<% else %>
  <p style="color: #B00100"> <%= I18n.t('supplier.account.view_index.any_supplier_account_found')%></p>
<% end %>


<%= link_to I18n.t('supplier.account.new'), new_supplier_account_path %> |
<%= link_to I18n.t("supplier.account.back_supplier"),  supplier_path(@supplier)%>
