<%= form_with(model: @part) do |form| %>
  <% if part.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(part.errors.count, "error") %> <%= I18n.t('part.error') %>:</h2>

      <ul>
        <% part.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :supplier_id, style: "display: block" %>
    <%= form.collection_select :supplier_id, Supplier.all, :id, :name %>
  </div>

  <div>
    <%= form.label :price, style: 'display: block' %>
    <%= form.number_field :price, step: 'any' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
