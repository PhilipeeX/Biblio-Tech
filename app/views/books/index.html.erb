<p style="color: green"><%= notice %></p>

<h1><%=@author.name %> <%= I18n.t('author.book.view_index_title')%></h1>
<%= form_with url: author_books_path, method: :get, local: true do %>
  <%= label_tag :title, I18n.t('author.book.view_index.filter_by_title') %>
  <%= text_field_tag :title, params[:title] %>
  <%= submit_tag I18n.t('helpers.filter.button') %>
<% end %>
<% if @books.any? %>
  <div id="books">
    <% @books.each do |book| %>
      <%= render book %>
      <p>
        <%= link_to I18n.t('author.book.show'), author_book_path(author_id: book.author_id, id: book.id) %>
      </p>
      <hr>
    <% end %>
  </div>
<% else %>
  <p style="color: #B00100"> <%= I18n.t('author.book.view_index.any_book_found')%></p>
<% end %>



<%= link_to I18n.t('author.book.new'), new_author_book_path %> |
<%= link_to I18n.t('author.book.back_author'), author_path(@author) %>
